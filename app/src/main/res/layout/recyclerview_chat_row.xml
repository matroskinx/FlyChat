<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="64dp">


    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/sender_image" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Sample sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sender_name_text"
            app:layout_constraintStart_toEndOf="@+id/sender_image"
            android:layout_marginStart="16dp" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/sender_message_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/sender_image"/>
    <TextView
            android:text="Sample message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sender_message_text"
            app:layout_constraintStart_toStartOf="@+id/sender_name_text"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sender_name_text"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/sender_image"
    />
</androidx.constraintlayout.widget.ConstraintLayout>